{
  "schema_version": 1,
  "quilt_loader": {
    "group": "org.purpurmc",
    "id": "{mod-id}",
    "version": "{version-number}",
    "metadata": {
      "name": "{project-name}",
      "description": "{project-description}",
      "contributors": {authors-map},
      "contact": {
        "homepage": "https://modrinth.com/project/{modrinth-id}",
        "sources": "{github-link}",
        "issues": "{issues-link}"
      },
      "icon": "{icon-path}"
    },
    "intermediate_mappings": "net.fabricmc:intermediary",
    "depends": [
      {
        "id": "quilt_resource_loader",
        "versions": "*",
        "unless": "fabric-resource-loader-v0"
      }
    ]
  }
}